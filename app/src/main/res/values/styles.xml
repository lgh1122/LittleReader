<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlaySearch" parent="Theme.AppCompat.NoActionBar" />


    <!--book_detail-->

    <style name="book_detail_51">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/color_51</item>
    </style>
    <style name="book_detail_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="book_detail_51.12">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="book_detail_51.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="book_detail_black.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="book_detail_black.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="book_detail_black.ReadMenu">
        <item name="android:textColor">@color/color_cb</item>
        <item name="android:textSize">@dimen/wy.read.text.bottom</item>
    </style>
    <style name="book_detail_black.BottomMenu">
        <item name="android:textColor">@color/color_cb</item>
        <item name="android:textSize">@dimen/wy.read.text.bottom</item>
    </style>
    <style name="WY.Theme.TextAppearance.Read.BottomMenu.Button"
        parent="book_detail_black.BottomMenu">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
